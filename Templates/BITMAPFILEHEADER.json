{
    "$schema": "https://raw.githubusercontent.com/jovibor/HexCtrl/master/docs/HexCtrl.Templates.Schema.json",
    "TemplateName": "BITMAPFILEHEADER",
    "Data": {
        "endianness": "little",
        "clrBk": "#909090",
        "clrText": "#FFFFFF",
        "Fields": [
            {
                "name": "bfType",
                "type": "WORD"
            },
            {
                "name": "bfSize",
                "type": "DWORD"
            },
            {
                "name": "bfReserved1",
                "type": "WORD"
            },
            {
                "name": "bfReserved2",
                "type": "WORD"
            },
            {
                "name": "bfOffBits",
                "type": "DWORD"
            },
            {
                "name": "bmih",
                "type": "BITMAPINFOHEADER"
            }
        ]
    },
    "CustomTypes": [
        {
            "TypeName": "BITMAPINFOHEADER",
            "clrBk": "#C0C0C0",
            "clrText": "#FFFFFF",
