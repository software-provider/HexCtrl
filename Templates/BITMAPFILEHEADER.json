                    "clrBk": "#BB0000",
                    "clrText": "#FFFFFF"
                },
                {
                    "name": "biXPelsPerMeter",
                    "type": "DWORD"
                },
                {
                    "name": "biYPelsPerMeter",
                    "type": "DWORD"
                },
                {
                    "name": "biClrUsed",
                    "type": "DWORD"
                },
                {
                    "name": "biClrImportant",
                    "type": "DWORD"
                }
            ]
        }
    ]
}