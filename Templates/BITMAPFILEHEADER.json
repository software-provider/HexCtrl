                {
                    "name": "biSize",
                    "type": "DWORD"
                },
                {
                    "name": "biWidth",
                    "type": "DWORD"
                },
                {
                    "name": "biHeight",
                    "type": "DWORD"
                },
                {
                    "name": "biPlanes",
